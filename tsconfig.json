{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"moduleResolution": "Bundler",
		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@actions/*": ["./actions/*"],
			"@assets/*": ["./assets/*"],
			"@components/*": ["./components/*"],
			"@data/*": ["./data/*"],
			"@layouts/*": ["./layouts/*"],
			"@pages/*": ["./pages/*"],
			"@services/*": ["./services/*"],
			"@utils/*": ["./utils/*"]
		}
	}
}
