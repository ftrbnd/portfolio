---
import type { PhotoCollectionEntry } from '../../content.config';
import CloudinaryImage from './CloudinaryImage.astro';

interface Props {
	title: string;
	thumbnails: PhotoCollectionEntry[];
}

const { title, thumbnails } = Astro.props;
---

<a
	href={`/film/${title}`}
	class='hover:opacity-50 hover:cursor-pointer flex flex-col gap-2'>
	<h3 class='text-sm text-muted-foreground text-center'>{title}</h3>
	<div class='gap-2 md:gap-4 grid grid-cols-2 grid-rows-2 max-w-screen-2xl'>
		{thumbnails.map((photo) => <CloudinaryImage {photo} />)}
	</div>
</a>
