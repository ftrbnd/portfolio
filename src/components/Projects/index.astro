---
import { favorites } from '../../utils/constants';
import Project from './Project';
import * as Header from './Header.md';
---

<div class='py-8'>
	<div class='pb-4 text-2xl font-bold'>
		<Header.Content />
	</div>

	<div
		class='flex flex-col items-stretch justify-center gap-3 md:grid md:grid-cols-2 xl:grid-cols-3'>
		{favorites.map((project) => <Project {...project} />)}
	</div>

	<div class='divider'></div>
	<p>
		See more on my <a
			class='link'
			href='https://github.com/ftrbnd'
			target='_blank'
			>GitHub</a
		>!
	</p>
</div>
