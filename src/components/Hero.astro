---
import { author, email } from '../data/constants';

const firstName = author.split(' ')[0];
---

<div class='min-h-screen hero'>
	<div class='text-center hero-content'>
		<div class='flex flex-col items-center max-w-md'>
			<img
				src='https://i.imgur.com/U65WS35.gif'
				alt='Monkey typing'
				class='w-12 h-12'
			/>
			<h1 class='py-1 text-5xl font-bold lg:text-6xl'>Hey there!</h1>
			<h2 class='pt-3 pb-6 text-3xl'>
				I'm {firstName}, a developer from Los Angeles, California.
			</h2>
			<p>
				I'm currently working on <a
					class='link'
					target='_blank'
					href='https://on-tour.fm'
					>On Tour</a
				>, a React Native application that works with Spotify and setlist.fm.
			</p>
			<p class='pb-3'>
				Check out <a
					class='link'
					target='_blank'
					href='https://eden-heardle.io'
					>EDEN Heardle</a
				>, a custom version of Heardle created for EDEN fans.
			</p>
			<a
				class='btn btn-primary'
				href={`mailto:${email}`}
				target='blank'>
				<svg
					class='w-6 h-6'
					fill='currentColor'
					role='img'
					viewBox='0 0 24 24'
					xmlns='http://www.w3.org/2000/svg'>
					<title>Gmail</title>
					<path
						d='M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-2.023 2.309-3.178 3.927-1.964L5.455 4.64 12 9.548l6.545-4.91 1.528-1.145C21.69 2.28 24 3.434 24 5.457z'
					></path>
				</svg>
				Say hi!
			</a>
		</div>
	</div>
</div>
