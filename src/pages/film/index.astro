---
import Gallery from '../../components/Film/Gallery.astro';
import FilmLayout from '../../layouts/FilmLayout.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { username } from '../../services/github';
---

<BaseLayout>
	<FilmLayout>
		<h1
			slot='header-content'
			class='text-4xl font-serif mb-2 lowercase'>
			shot on film
		</h1>
		<h2
			slot='header-content'
			class='text-xl text-muted-foreground'>
			[ Ricoh TF-500 ]
		</h2>
		<h3
			slot='header-content'
			class='text-sm text-muted-foreground'>
			Check out{' '}<a
				href={`https://github.com/${username}/film-sync`}
				target='_blank'
				class='link font-bold'
				>Film Sync!</a
			>
		</h3>
		<Gallery />
	</FilmLayout>
</BaseLayout>
