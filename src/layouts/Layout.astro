---
import Navbar from '../components/Navbar/index.astro';
import Footer from '../components/Footer.astro';
import { author } from '../utils/constants';
import { ViewTransitions } from 'astro:transitions';
---

<!doctype html>
<html
	lang='en'
	class='scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content={`${author}, a developer from Los Angeles`}
		/>
		<meta
			name='viewport'
			content='width=device-width'
		/>
		<link
			rel='icon'
			type='image/svg+xml'
			href='/favicon.ico'
		/>
		<meta
			name='generator'
			content={Astro.generator}
		/>
		<title>{author}</title>
		<script
			src='https://kit.fontawesome.com/4afe62f7ed.js'
			crossorigin='anonymous'
		></script>
		<ViewTransitions />
	</head>
	<body class='flex flex-col items-center bg-base-200'>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
